<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- RollingFile Appender (output to a rolling file) -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Main log file -->
        <file>logs/application.log</file>

        <!-- Rolling policy (time-based rotation) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Log file pattern (logfile will be rolled daily) -->
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- Optional: Max size for each log file before rotating -->
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>

        <!-- Log file format -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration (logs everything at DEBUG level) -->
    <root level="DEBUG">
        <appender-ref ref="ROLLING_FILE"/>
    </root>


</configuration>
